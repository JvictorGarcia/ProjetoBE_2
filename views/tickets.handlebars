<h1>Ingressos Disponíveis</h1>

{{#if tickets.length}}
    {{#each tickets}}
        <div>
            <h2>{{this.name}}</h2>
            <p>Preço: R$ {{this.price}}</p>
            <p>Disponíveis: {{this.quantity}}</p>
            <form action="/tickets/comprar" method="POST">
                <input type="hidden" name="ticketId" value="{{this.id}}">
                <input type="number" name="quantity" min="1" max="{{this.quantity}}" required>
                <button type="submit">Comprar</button>
            </form>
        </div>
    {{/each}}
{{else}}
    <p>⚠️ Nenhum ingresso disponível no momento.</p>
{{/if}}